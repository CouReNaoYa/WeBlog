<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="按照id查找文章"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@color/colorAccent"
        android:textColor="#FFFFFF"
        />

    <TextView
        android:id="@+id/tv_select_text_by_id_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="搜索"
        android:layout_marginTop="30dp"

        android:layout_marginLeft="350dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@color/colorAccent"
        android:textColor="#FFFFFF"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:background="#FFFFFF">


        <EditText
            android:id="@+id/et_select_text_id"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/shape"
            android:hint="  请输入文章ID..." />


        <RelativeLayout
            android:layout_marginTop="50dp"
            xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/text_select_by_id_author_picture"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/touxiang"

                android:layout_marginLeft="30dp" />

            <TextView
                android:id="@+id/tv_text_select_by_id_author_name"
                android:layout_width="200dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="30dp"
                android:textSize="15dp"
                android:ellipsize="end"
                android:layout_height="20dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="15dp"
                android:layout_marginTop="65dp"
                android:id="@+id/tv_text_select_by_id_creat_time"
                android:layout_marginLeft="100dp"
                android:textSize="10dp"
                android:textColor="#D9D9D9"
                />

            <TextView
                android:layout_width="100dp"
                android:layout_height="15dp"
                android:layout_marginTop="65dp"
                android:id="@+id/tv_text_select_by_id_classify"
                android:layout_marginLeft="230dp"
                android:textSize="10dp"
                android:textColor="#D9D9D9"
                />

            <TextView
                android:id="@+id/tv_text_select_by_id_content"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:textSize="10dp"
                android:maxLines="15"
                android:ellipsize="end"
                android:layout_marginTop="90dp"
                />


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/tv_text_select_by_id_content"
                android:layout_marginTop="15dp"
                android:background="#F1F1F1"/>


        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>