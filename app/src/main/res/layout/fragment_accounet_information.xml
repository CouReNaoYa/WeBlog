<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_account_information"
    android:background="#F1F1F1"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/colorAccent"
        android:layout_height="200dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/iv_account_picture"
            android:layout_marginLeft="30dp"
            android:src="@drawable/touxiang"
            android:background="@drawable/shape"
            android:layout_marginTop="50dp"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:id="@+id/tv_account_name"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="60dp"
            android:textSize="20dp"
            android:background="@color/colorAccent"
            android:textColor="#FFFFFF"
            />
        <TextView
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:id="@+id/tv_account_uid"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="105dp"
            android:textSize="20dp"
            android:background="@color/colorAccent"
            android:textColor="#FFFFFF"
            />

        <TextView
            android:layout_width="200dp"
            android:layout_height="15dp"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="30dp"
            android:background="@color/colorAccent"
            android:textColor="#FFFFFF"
            android:id="@+id/tv_account_textcount"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="#6DE8E8E8"

        android:layout_marginTop="215dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#FFFFFF"
            android:id="@+id/rv_change_account_information"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_centerVertical="true"
                android:textColor="#000000"
                android:background="#FFFFFF"
                android:text="修改信息"
                android:textSize="15dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="50dp"
                android:background="#F1F1F1"/>



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="42dp"
            android:background="#FFFFFF"
            android:id="@+id/rv_look_mytext"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_marginLeft="30dp"
                android:textColor="#000000"

                android:layout_centerVertical="true"
                android:text="我的文章"
                android:background="#FFFFFF"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="50dp"
                android:background="#F1F1F1"/>



        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#FFFFFF"
            android:layout_marginTop="84dp"
            android:id="@+id/rv_account_setting"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_marginLeft="30dp"
                android:layout_centerVertical="true"
                android:textColor="#000000"

                android:text="账户设置"
                android:background="#FFFFFF"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="50dp"
                android:background="#F1F1F1"/>



        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="126dp"
            android:background="#FFFFFF"
            android:id="@+id/rv_account_safe"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#000000"

                android:layout_marginLeft="30dp"
                android:layout_centerVertical="true"
                android:text="账户安全"
                android:background="#FFFFFF"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="50dp"
                android:background="#F1F1F1"/>



        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="168dp"
            android:background="#FFFFFF"
            android:id="@+id/rv_account_focuse"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_marginLeft="30dp"
                android:layout_centerVertical="true"
                android:text="我的关注"
                android:textColor="#000000"

                android:background="#FFFFFF"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="50dp"
                android:background="#F1F1F1"/>



        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="210dp"
            android:background="#FFFFFF"
            android:id="@+id/rv_account_collect"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_marginLeft="30dp"
                android:layout_centerVertical="true"
                android:text="我的收藏"
                android:textColor="#000000"

                android:background="#FFFFFF"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="50dp"
                android:background="#F1F1F1"/>



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="272dp"
            android:id="@+id/rv_account_quit"
            android:background="#FFFFFF"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_marginLeft="30dp"
                android:layout_centerVertical="true"
                android:text="退出登录"

                android:textColor="#E14D4D"
                android:background="#FFFFFF"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="50dp"
                android:background="#F1F1F1"/>



        </RelativeLayout>




    </RelativeLayout>

</RelativeLayout>