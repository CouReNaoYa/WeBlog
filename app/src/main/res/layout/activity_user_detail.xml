<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_account_information"
    android:background="#F1F1F1"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/colorAccent"
        android:layout_height="200dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/iv_select_user_by_id_picture"
            android:layout_marginLeft="30dp"
            android:src="@drawable/touxiang"
            android:background="@drawable/shape"
            android:layout_marginTop="50dp"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:id="@+id/tv_select_user_by_id_name"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="60dp"
            android:textSize="20dp"
            android:background="@color/colorAccent"
            android:textColor="#FFFFFF"
            />
        <TextView
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:id="@+id/tv_select_user_by_id_uid"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="105dp"
            android:textSize="20dp"
            android:background="@color/colorAccent"
            android:textColor="#FFFFFF"
            />

        <TextView
            android:layout_width="200dp"
            android:layout_height="15dp"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="30dp"
            android:background="@color/colorAccent"
            android:textColor="#FFFFFF"
            android:id="@+id/tv_select_user_by_id_textcount"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="#6DE8E8E8"

        android:layout_marginTop="215dp">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_height="700dp"
            android:layout_width="match_parent"
            android:id="@+id/recycler_selecy_user_testlist"

            >
        </androidx.recyclerview.widget.RecyclerView>





    </RelativeLayout>

</RelativeLayout>